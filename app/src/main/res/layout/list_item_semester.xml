<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/semester_list_item_titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/semester_list_item_gpaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gpa_intro"
            android:layout_below="@+id/semester_list_item_creditsTextView"
            android:textStyle="bold"
            android:focusable="false"
            android:text="GPA" />

        <TextView
            android:id="@id/gpa_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/credits_intro"
            android:paddingRight="19dp"
            android:text="GPA: " />

        <TextView
            android:id="@id/semester_list_item_creditsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/semester_list_item_gpaTextView"
            android:textStyle="bold"
            android:text="Credits" />

        <TextView
            android:id="@id/credits_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/gpa_intro"
            android:paddingRight="3dp"
            android:text="Credits: " />

    </RelativeLayout>

</LinearLayout>

